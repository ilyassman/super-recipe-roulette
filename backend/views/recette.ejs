<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= recipe.titre %> - Super Recipe Roulette</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/recette.css">
</head>
<body>
    <!-- Header / Navigation -->
    <%- include('partials/navbar', { activePage: 'roulette', logged: logged }) %>

    <!-- Main Content -->
    <main class="recipe-page">
        <div class="container py-5">
            <!-- Titre avec emojis -->
            <div class="text-center mb-4">
                <h1 class="recipe-title">
                    <span class="emoji">üéØ</span> Voici votre recette ! <span class="emoji">üéâ</span>
                </h1>
            </div>

            <!-- Carte de la recette -->
            <div class="recipe-card mx-auto">
                <!-- Image de la recette -->
                <div class="recipe-image-container">
                    <% if (recipe.image) { %>
                        <img src="/assets/img/<%= recipe.image %>" alt="<%= recipe.titre %>" class="recipe-image">
                    <% } else { %>
                        <div class="recipe-image-placeholder">
                            <i class="bi bi-image fs-1"></i>
                        </div>
                    <% } %>
                </div>

                <!-- Badges d'information -->
                <div class="recipe-badges">
                    <span class="badge-item">
                        <i class="bi bi-tag"></i> <%= recipe.categorie === 'plat' ? 'Plat Principal' : recipe.categorie === 'entree' ? 'Entr√©e' : recipe.categorie === 'dessert' ? 'Dessert' : recipe.categorie %>
                    </span>
                    <span class="badge-item">
                        <i class="bi bi-clock"></i> <%= recipe.temps_preparation || 30 %> min
                    </span>
                    <span class="badge-item">
                        <i class="bi bi-bar-chart"></i> <%= recipe.difficulte || 'Facile' %>
                    </span>
                </div>

                <!-- Titre de la recette -->
                <h2 class="recipe-name"><%= recipe.titre %></h2>

                <!-- Description -->
                <% if (recipe.description) { %>
                    <p class="recipe-description"><%= recipe.description %></p>
                <% } %>

                <!-- Boutons d'action -->
                <div class="recipe-actions">
                    <a href="/recette/<%= recipe.id %>/details" class="btn-primary-action">
                        Voir la recette compl√®te <i class="bi bi-arrow-right"></i>
                    </a>
                    <a href="/" class="btn-secondary-action">
                        <i class="bi bi-arrow-repeat"></i> Relancer la Roulette
                    </a>
                    <% if (logged) { %>
                        <button class="btn-favorite <%= typeof isFavorite !== 'undefined' && isFavorite ? 'favorited' : '' %>" id="btnFavorite">
                            <% if (typeof isFavorite !== 'undefined' && isFavorite) { %>
                                <i class="bi bi-heart-fill"></i> Ajout√© aux favoris
                           <% } else { %>
                                <i class="bi bi-heart"></i> Ajouter aux favoris
                            <% } %>
                        </button>
                    <% } else { %>
                        <a href="/login" class="btn-secondary-action">
                            <i class="bi bi-heart"></i> Ajouter aux favoris
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <script>
        // Gestion du bouton favori (seulement si connect√©)
        $(document).ready(function() {
            const btnFavorite = $('#btnFavorite');
            
            if (btnFavorite.length > 0) {
                btnFavorite.on('click', function() {
                    const recipeId = <%= recipe.id %>;
                    const $btn = $(this);
                    const $icon = $btn.find('i');
                    const isFavorited = $btn.hasClass('favorited');
                    
                    console.log('Click sur favori, recipeId:', recipeId, 'isFavorited:', isFavorited);
                    $btn.prop('disabled', true);
                    
                    $.post("/recette/favorite", "id=" + recipeId, function(data, status, xhr) {
                        $btn.prop('disabled', false);
                        
                        if (status == "error") {
                            console.error('Erreur:', xhr.status + " " + xhr.statusText);
                            alert('Une erreur est survenue. Veuillez r√©essayer.');
                            return;
                        }
                        
                        if (data == "OK") {
                            // Ajouter aux favoris
                            $icon.removeClass('bi-heart').addClass('bi-heart-fill');
                            $btn.html('<i class="bi bi-heart-fill"></i> Ajout√© aux favoris');
                            $btn.addClass('favorited');
                            console.log("Favori ajout√© avec succ√®s");
                        } else if (data == "REMOVED") {
                            // Retirer des favoris
                            $icon.removeClass('bi-heart-fill').addClass('bi-heart');
                            $btn.html('<i class="bi bi-heart"></i> Ajouter aux favoris');
                            $btn.removeClass('favorited');
                            console.log("Favori retir√© avec succ√®s");
                        } else {
                            console.error('Erreur:', data);
                            alert('Une erreur est survenue. Veuillez r√©essayer.');
                        }
                    })
                });
            }
        });
    </script>
</body>
</html>

