<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= recipe.titre %> - Super Recipe Roulette</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/recette.css">
</head>
<body>
    <!-- Header / Navigation -->
    <%- include('partials/navbar', { activePage: 'roulette', logged: logged }) %>

    <!-- Main Content -->
    <main class="recipe-page">
        <div class="container py-5">
            <!-- Titre avec emojis -->
            <div class="text-center mb-4">
                <h1 class="recipe-title">
                    <span class="emoji">ðŸŽ¯</span> Voici votre recette ! <span class="emoji">ðŸŽ‰</span>
                </h1>
            </div>

            <!-- Carte de la recette -->
            <div class="recipe-card mx-auto">
                <!-- Image de la recette -->
                <div class="recipe-image-container">
                    <% if (recipe.image) { %>
                        <img src="/assets/img/<%= recipe.image %>" alt="<%= recipe.titre %>" class="recipe-image">
                    <% } else { %>
                        <div class="recipe-image-placeholder">
                            <i class="bi bi-image fs-1"></i>
                        </div>
                    <% } %>
                </div>

                <!-- Badges d'information -->
                <div class="recipe-badges">
                    <span class="badge-item">
                        <i class="bi bi-tag"></i> <%= recipe.categorie === 'plat' ? 'Plat Principal' : recipe.categorie === 'entree' ? 'EntrÃ©e' : recipe.categorie === 'dessert' ? 'Dessert' : recipe.categorie %>
                    </span>
                    <span class="badge-item">
                        <i class="bi bi-clock"></i> <%= recipe.temps_preparation || 30 %> min
                    </span>
                    <span class="badge-item">
                        <i class="bi bi-bar-chart"></i> <%= recipe.difficulte || 'Facile' %>
                    </span>
                </div>

                <!-- Titre de la recette -->
                <h2 class="recipe-name"><%= recipe.titre %></h2>

                <!-- Description -->
                <% if (recipe.description) { %>
                    <p class="recipe-description"><%= recipe.description %></p>
                <% } %>

                <!-- Boutons d'action -->
                <div class="recipe-actions">
                    <a href="/recette/<%= recipe.id %>/details" class="btn-primary-action">
                        Voir la recette complÃ¨te <i class="bi bi-arrow-right"></i>
                    </a>
                    <a href="/" class="btn-secondary-action">
                        <i class="bi bi-arrow-repeat"></i> Relancer la Roulette
                    </a>
                    <button class="btn-favorite" id="btnFavorite">
                        <i class="bi bi-heart"></i> Ajouter aux favoris
                    </button>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <script>
        // Gestion du bouton favori
        document.getElementById('btnFavorite').addEventListener('click', function() {
            const icon = this.querySelector('i');
            if (icon.classList.contains('bi-heart')) {
                icon.classList.remove('bi-heart');
                icon.classList.add('bi-heart-fill');
                this.innerHTML = '<i class="bi bi-heart-fill"></i> AjoutÃ© aux favoris';
                this.classList.add('favorited');
            } else {
                icon.classList.remove('bi-heart-fill');
                icon.classList.add('bi-heart');
                this.innerHTML = '<i class="bi bi-heart"></i> Ajouter aux favoris';
                this.classList.remove('favorited');
            }
        });
    </script>
</body>
</html>

